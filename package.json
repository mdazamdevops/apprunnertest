{
  "name": "crazytrainai",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspace=shared && npm run build --workspace=server",
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "start": "npm run start --workspace=server",
    "install:all": "npm install --legacy-peer-deps",
    "build:prod": "npm run install:all && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=9.0.0"
  }
}
