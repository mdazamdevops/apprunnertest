{
  "name": "crazytrainai",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspace=shared && npm run build --workspace=client && npm run build --workspace=server",
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "start": "npm run start --workspace=server",
    "db:push": "npm run db:push --workspace=server",
    "db:studio": "npm run db:studio --workspace=server",
    "install:all": "npm install --legacy-peer-deps",
    "build:all": "npm run build --workspace=shared && npm run build --workspace=client && npm run build --workspace=server"
  },
  "devDependencies": {
    "lightningcss": "^1.25.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
